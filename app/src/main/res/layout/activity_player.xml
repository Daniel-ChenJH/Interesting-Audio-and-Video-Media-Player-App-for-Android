<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
				xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				tools:context=".PlayerActivity" android:orientation="vertical">

	<FrameLayout
					android:layout_width="match_parent"
					android:layout_height="0dp" android:layout_weight="1">

		<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent" android:background="#114514">
			<VideoView
							android:layout_width="match_parent"
							android:layout_height="match_parent" android:id="@+id/videoView" android:layout_centerInParent="true"/>
		</RelativeLayout>
		<Button
						android:text="Button"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:id="@+id/button"/>
	</FrameLayout>
	<ScrollView
					android:layout_width="match_parent"
					android:layout_height="0dp" android:layout_weight="1" android:id="@+id/editingPanel">
		<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
									android:orientation="vertical">
			<Button
							android:text="Button"
							android:layout_width="match_parent"
							android:layout_height="wrap_content" android:id="@+id/leaveEditingButton"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>